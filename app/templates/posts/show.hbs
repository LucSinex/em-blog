<h2>{{model.title}}</h2>

<p>{{model.body}}</p>

<h3>Comments:</h3>
{{#each model.comments as |comment|}}
	<p>
		{{comment.author}}:
		{{comment.body}}
	</p>
{{/each}}

<h3>Add a comment</h3>

<p>Your name: {{input value=newComment.author}}</p>
<p>{{textarea cols=50 rows=20 value=newComment.body}}</p>
<button {{action 'comment'}}>Add comment</button>

<p>
	{{#link-to 'posts'}}Back{{/link-to}}
</p>

{{outlet}}
