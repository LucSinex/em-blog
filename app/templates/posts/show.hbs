<h2>{{model.title}}</h2>

<p>{{model.body}}</p>

<h3>Comments:</h3>
{{#each model.comments as |comment|}}
	<p>
		{{comment.author}}:
		{{comment.body}}
	</p>
{{/each}}

<h3>Add a comment</h3>

<p>{{paper-input label="Name" value=newComment.author}}</p>
<p>{{paper-input label="Your Comment" value=newComment.body textarea=true cols=20 rows=20}}</p>
<button {{action 'comment'}}>Add comment</button>

<p>
	{{#link-to 'posts'}}Back{{/link-to}}
</p>

{{outlet}}
